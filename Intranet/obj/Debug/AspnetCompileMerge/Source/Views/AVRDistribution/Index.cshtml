<script type="text/x-handlebars-template" id="recipients-template">
   
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="span3">Регион</th>
                <th class="span4">Руководитель отдела</th>
                <th class ="span4"> Руководитель филиала</th>
                <th class="span2">POR PO</th>
               <th class="td-actions span1"></th>
</tr>
        </thead>
        <tbody></tbody>
    </table>
   
</script>

<script type="text/x-handlebars-template" id="recipient-template">

    <td>{{Name}}</td>
    <td>
        {{RukOtdelaEmail}}
    </td>
    <td>
        {{RukFillialaEmail}}
    </td>
    <td>
        {{POROREmail}}
    </td>

    <td class="td-actions">


        <a class="btn btn-mini toggle {{#if Enabled}} enable{{/if}}">
            <i class="btn-icon-only  icon-envelope"></i>
        </a>

       
        <a class="btn btn-mini btn-danger destroy">
            X

        </a>


    </td>
</script>

<script type="text/x-handlebars-template" id="modal_content_with_close_btn">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        {{#if Name}}
        <h3 id="myModalLabel">{{Name}}</h3>
        {{else}}
        <h3 id="myModalLabel">Создание нового региона</h3>
        {{/if}}
    </div>
    <div class="modal-body">
        <form class="contact" name="contact">
            {{#if Id}}
            <input name="Id" type="hidden" value="{{Id}}" />
            {{/if}}

            <div class="control-group">
                <label class="control-label" for="Name">Название региона</label>
                <div class="controls">
                    <input type="text" id="Name" name="Name" value="{{Name}}" required >
                    <span name="NameError" class="help-inline"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="RukOtdelaEmail">Адреса руководителей отдела</label>
                <div class="controls">
                    <textarea type="text" name="RukOtdelaEmail" id="RukOtdelaEmail">{{RukOtdelaEmail}}</textarea>
                    <span name="RukOtdelaEmailError" class="help-inline"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="RukFillialaEmail">Адреса руководитлей филиала</label>
                <div class="controls">
                    <textarea type="text" name="RukFillialaEmail" id="RukFillialaEmail">{{RukFillialaEmail}}</textarea>
                    <span name="RukFillialaEmailError" class="help-inline"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="POROREmail">Адреса ответственного POR PO</label>
                <div class="controls">
                    <textarea type="text" name="POROREmail" id="POROREmail">{{POROREmail}}</textarea>
                    <span name ="POPOREmailError" class="help-inline"></span>
                </div>
            </div>

            @*<label for="Name" class="label">Название региона</label><br>
            <input data-field="Name" type="text" class="input-xlarge" name="Name" value="{{Name}}"> <br>
            <label for="RukOtdelaEmail" class="label">Адреса руководителей отдела</label><br>
            <textarea data-field="RukOtdelaEmail" type="text" class="input-xlarge" name="RukOtdelaEmail">{{RukOtdelaEmail}}</textarea>               <br>
            <label for="RukFillialaEmail" class="label">Адреса руководитлей филиала</label><br>
            <textarea data-field="RukFillialaEmail" type="text" class="input-xlarge" name="RukFillialaEmail">{{RukFillialaEmail}}</textarea>
            <br>
            <label class="label">Адреса ответственного POR PO</label><br>
            <textarea type="text" class="input-xlarge" name="POROREmail">{{POROREmail}}</textarea><br>*@
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary" type="button" id="save">Save changes</button>
    </div>

</script>
<script type="text/x-handlebars-template" id="header-template">
    <button type="button" id="create-new" class="btn btn-primary">Create new</button>
    <form class="navbar-search pull-right">
        <input type="text" class="search-query" placeholder="Search">
    </form>
    <hr>
</script>



</html>
