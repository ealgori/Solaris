@{
    string _class = "";
    if (ViewData["class"] != null)
    {
        _class = ViewData["class"].ToString();
        @Html.TextArea("", ViewData.TemplateInfo.FormattedModelValue.ToString(), new { @readonly = "true", @class = _class, placeholder = ViewData.ModelMetadata.Watermark })
    }
    else
    {
        @Html.TextArea("", ViewData.TemplateInfo.FormattedModelValue.ToString(), new { @readonly = "true", placeholder = ViewData.ModelMetadata.Watermark }) 
    }
}

